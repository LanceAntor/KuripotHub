<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_corners"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Breakfast -->
        <LinearLayout
            android:id="@+id/breakfastOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="@color/dirty_white">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/egg"
                    android:contentDescription="Breakfast icon" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="BREAKFAST"
                android:fontFamily="@font/russo_one"
                android:textColor="@android:color/black"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Lunch -->
        <LinearLayout
            android:id="@+id/lunchOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/black"
                app:cardBackgroundColor="@color/dirty_white">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lunch"
                    android:contentDescription="Lunch icon" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="LUNCH"
                android:fontFamily="@font/russo_one"
                android:textColor="@android:color/black"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Dinner -->
        <LinearLayout
            android:id="@+id/dinnerOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/dirty_white">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wine_bottle"
                    android:contentDescription="Dinner icon" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="DINNER"
                android:fontFamily="@font/russo_one"
                android:textColor="@android:color/black"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Others -->
        <LinearLayout
            android:id="@+id/othersOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/dirty_white">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/other"
                    android:contentDescription="Others icon" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="OTHERS"
                android:fontFamily="@font/russo_one"
                android:textColor="@android:color/black"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
